extends layout

block content
  div(ng-controller='homeCtrl', class='container-fluid')
    .row
      .col-md-12
        h2=title
        hr
    .row.equal
      .col-sm-6.col-md-6
        .panel.panel-default
          .panel-heading
            label Current Brew
          .panel-body(ng-if="!currentBrew")
            p
              h3 Nothing Brewing!
          .panel-body(ng-if="currentBrew")
            p
              label Name:&nbsp
              a(href='{{ currentBrew.recipeUrl }}') {{ currentBrew.name }}
            p
              label Started:
              &nbsp {{ currentBrew.startDT | date }}
      .col-sm-6.col-md-6
        .panel.panel-default
          .panel-heading
            label Live Temp
          .panel-body
            p(ng-repeat="temp in liveTemp") 
              label {{ temp.name }} {{ temp.sensor.name }}:&nbsp
              {{ temp.sensor.currentRecord.temp + temp.sensor.units}} ({{ ((temp.sensor.currentRecord.temp * 9) / 5) + 32 | number:1 }}Â°F)&nbsp
              label {{ temp.output ? temp.output.name + ':' : '' }}&nbsp
              {{ temp.output ? (temp.output.state === 1 ? 'ON' : 'OFF') : ''}}&nbsp
    .row
      .col-md-12
        .panel.panel-default
          .panel-heading
            label Brew Temperature (Last 24 Hours)
          .panel-body
            canvas(id='brewGraph')
